<div class="container-fluid">
  <div calss="row">
 　  <% @resipis.each do |resipi| %>
　  　<div class="col-md-4 px-4 shadow-lg my-5"><br>
　　  　<%= attachment_image_tag resipi, :image, format: 'png', fallback: "no_image.jpg", size: "240x240" %><br>
　　    <p>
        <%= link_to resipi_path(resipi.id) do %>
　　    　料理名：<%= resipi.name %>
　　  　<% end %>
　　  　</p>
　　  　<br>
　  　　投稿者：<%= resipi.user.name %>
　　  　<%= link_to "#{resipi.comments.count} コメント", resipi_path(resipi.id) %><br>
　  　</div>
    <% end %>
  </div>
</div>